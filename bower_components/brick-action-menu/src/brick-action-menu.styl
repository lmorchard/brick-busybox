@import '../bower_components/brick-common/styles/mixins'
@import '../bower_components/brick-common/styles/params'

@keyframes brickActionMenuTranslateIn {
    0% { opacity: 0; transform: translateY(100px); }
    100% { opacity: 1; transform: translateY(0px); }
}
@keyframes brickActionMenuFadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
}
@keyframes brickActionMenuFadeOut {
    0% { opacity: 1; }
    100% { opacity: 0; }
}

:host {

  form[role="dialog"] {
    visibility: hidden;
    fieldset {
      opacity: 0;
    }
  }

  form[role="dialog"][show] {
    visibility: visible;
    fieldset {
      opacity: 1;
    }
  }

  form[role="dialog"][show="in"] {
    visibility: visible;
    animation-name: brickActionMenuFadeIn;
    animation-duration: 0.3s;

    fieldset {
      opacity: 0;
      animation-name: brickActionMenuTranslateIn;
      animation-delay: 0.4s;
      animation-duration: 0.3s;
      animation-timing-function: cubic-bezier(0.175, 0.885, 0.320, 1.275);
      menu {
        button {
            transition: none;
        }
      }
    }
  }

  form[role="dialog"][show="out"] {
    visibility: visible;
    animation-name: brickActionMenuFadeOut;
    animation-delay: 0.4s;
    animation-duration: 0.3s;

    fieldset {
      opacity: 0;
      animation-name: brickActionMenuFadeOut;
      animation-duration: 0.3s;
      animation-timing-function: linear;
      menu {
        button {
            transition: none;
        }
      }
    }
  }

  form[role="dialog"] {

    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 200;
    font-style: italic;

    fieldset {
      max-height: 75%;
      max-width: 350px;
      width: 90%;
      border: 0;
      padding: 0;
      margin: auto;

      menu {
        max-height: 250px;
        overflow: hidden;
        margin: 0;
        padding: 0;
        display: flex;

        button {
          height: 50px;
          font-weight: lighter;
          font-style: italic;
          flex-grow: 1;
          margin: 0;
          border: 0;
          padding: 0rem 25px;
          transition: all 0.2;
          transition-delay: 300ms;
          position: relative;
        }

        button:after {
            content: " ";
            position: absolute;
            width: 1px;
            right: 0px;
            z-index: 1;
        }
        button:active {
            transition: none;
        }
        button:active:after {
            z-index: -1;
        }

        button:last-child:after {
            display: none;
        }
      }
    }
  }

  form[role="dialog"].vertical {
    menu {
      flex-direction: column;
      position: relative;

      button {
        width: 100%;
      }

      button:after {
          position: absolute;
          height: 1px;
          bottom: 0px;
          top: 49px;
      }
    }
  }

}
