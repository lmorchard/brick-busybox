@import '../../../bower_components/brick-common/styles/mixins'
@import '../../../bower_components/brick-common/styles/params'
@import '../../../bower_components/brick-common/styles/themes/default/params'

$error-color = #c00;
$input-text-color = #909CA7;
$border-color = #D6D6D6;
$dim-small = .825em;

:host {

  .field {

    display: inline-block;
    width: 100%;
    border: 1px solid $border-color;
    position: relative;
    overflow: hidden;

    ::content input {
      min-height: 2.353em;
      width: 100%;
      border: medium none;
      padding: 0 $dim-small;
      margin: 0;
      color: $color-alpha;
      box-sizing: border-box;
      -webkit-appearance: none;
      font-family: inherit;
      font-size: inherit;
    }
    ::content input:focus {
      outline-width: 0;
    }
    ::content input::-moz-placeholder {
      font-style: italic;
      font-weight: lighter;
      color: $input-text-color;
    }
    ::content input::-webkit-input-placeholder {
      font-style: italic;
      font-weight: lighter;
      color: $input-text-color;
    }

    ::content textarea {
      width: 100%;
      border: medium none;
      padding: $dim-small;
      color: $color-alpha;
      box-sizing: border-box;
      -webkit-appearance: none;
      font-family: inherit;
      font-size: inherit;
      resize: vertical;
    }
    ::content textarea:focus {
      outline-width: 0;
    }

  }

  .label {
    //line-height: 1.4em;
    color: $color-epsilon;
    margin: $dim-small 0 .25em $dim-small;
    margin-left: $dim-small
  }

  .error {
    color: $error-color;
    display: none;
    margin: .235em 0 0 $dim-small;
  }

  .indicator {
    content: " ";
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    height: .176em;
    background: #333;
    -webkit-transition: transform 0.2s;
    transition: transform 0.2s;
    -webkit-transform: scaleX(0);
    transform: scaleX(0);
    opacity: 0;
    z-index: 1;
  }
  .clear {
    cursor: pointer;
    line-height: 1em;
    position: absolute;
    top: .706em;
    right: .588em;
    width: 1em;
    height: 1em;
    color: $input-text-color;
    display: none;
    font-family: "FontAwesome";
    font-style: normal;
    font-weight: normal;
    line-height: 1;
    -moz-osx-font-smoothing: grayscale;
  }

  &([type=search]) .field {
    border-radius: 1.8em;
  }

  &([focus]) .indicator {
    -webkit-transform: scaleX(1);
    transform: scaleX(1);
    opacity: 1;
  }

  &([focus]) .clear {
    display: block;
    &:active, &:hover {
      opacity: 0.3;
    }
  }

  &([multiline]) .clear {
    display: none;
  }

  &([error][invalid]) .error {
    display: block;
    font-size: .85em
  }

}
