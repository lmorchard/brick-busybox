@import '../bower_components/brick-common/styles/mixins'
@import '../bower_components/brick-common/styles/params'


:host(brick-progressbar[type="success"])::shadow .progress-bar {
  background-color: #5cb85c;
}
:host(brick-progressbar[type="info"])::shadow .progress-bar {
  background-color: #5bc0de;
}
:host(brick-progressbar[type="danger"])::shadow .progress-bar {
  background-color: #d9534f;
}
:host(brick-progressbar[type="warning"])::shadow .progress-bar {
  background-color: #f0ad4e;
}


:host(brick-progressbar[striped])::shadow .progress-bar {
  background-image: -webkit-gradient(linear, 0 100%, 100% 0, color-stop(0.25, rgba(255, 255, 255, 0.15)), color-stop(0.25, transparent), color-stop(0.5, transparent), color-stop(0.5, rgba(255, 255, 255, 0.15)), color-stop(0.75, rgba(255, 255, 255, 0.15)), color-stop(0.75, transparent), to(transparent));
  background-image: -webkit-linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent);
  background-image: -moz-linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent);
  background-image: linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent);
  background-size: 40px 40px;
}

:host(brick-progressbar[active])::shadow .progress-bar {
  -webkit-animation: progress-bar-stripes 2s linear infinite;
  animation: progress-bar-stripes 2s linear infinite;
}

:host(brick-progressbar[showStatus])::shadow span.status{
  display : block;
}

:host(brick-progressbar[showActualValue])::shadow span.status{
  .percentage {
    display : none;
  }
  .value {
    display : block;
  }
}




:host(brick-progressbar[intermediate])::shadow .progress {
  border-radius: 0;
}


:host(brick-progressbar[intermediate])::shadow .progress-bar {
  width:20% !important;
  position: relative;
  -webkit-animation : progress-intermediate-animation 1s linear infinite;
  animation: progress-intermediate-animation 1s linear infinite;
}


:host::shadow{

  @-webkit-keyframes progress-intermediate-animation {
    0% {left:0}
    50% {left:80%}
    100% {left:0;}
  }
  @-moz-keyframes progress-intermediate-animation {
    0% {left:0}
    50% {left:80%}
    100% {left:0;}
  }
  @-o-keyframes progress-intermediate-animation {
    0% {left:0}
    50% {left:80%}
    100% {left:0;}
  }
  @keyframes progress-intermediate-animation {
    0% {left:0}
    50% {left:80%}
    100% {left:0;}
  }

  @-webkit-keyframes progress-bar-stripes {
    from {
      background-position: 40px 0;
    }
    to {
      background-position: 0 0;
    }
  }

  @-moz-keyframes progress-bar-stripes {
    from {
      background-position: 40px 0;
    }
    to {
      background-position: 0 0;
    }
  }

  @-o-keyframes progress-bar-stripes {
    from {
      background-position: 0 0;
    }
    to {
      background-position: 40px 0;
    }
  }

  @keyframes progress-bar-stripes {
    from {
      background-position: 40px 0;
    }
    to {
      background-position: 0 0;
    }
  }

  .progress {
    height: 20px;
    margin-bottom: 20px;
    overflow: hidden;
    background-color: #f5f5f5;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
  }

  .progress-bar {
    float: left;
    width: 0;
    height: 100%;
    font-size: 12px;
    line-height: 20px;
    color: #ffffff;
    text-align: center;
    background-color: #428bca;
    -webkit-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);
    box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);
    -webkit-transition: width 0.6s ease;
    transition: width 0.6s ease;
    span.status{
      display : none;
      .percentage {
        display : block;
      }
      .value {
        display : none;
      }
    }
  }
}


